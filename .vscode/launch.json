{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Web",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/web/",
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Launch CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/cli/",
            "console": "integratedTerminal",
            "args": [
                "-action=add",
            ],
            "envFile": "${workspaceFolder}/.env",
        },
    ]
}